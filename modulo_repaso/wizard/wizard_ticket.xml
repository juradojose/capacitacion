<record id="repaso_main_view_form" model="ir.ui.view">
      <field name="name">repaso.main.view.form</field>
      <field name="model">repaso.main</field>
      <field name="arch" type="xml">
        <form string="Main Repaso">
          <sheet>
            <group>
              <field name="tickets"/>
              <field name="nombre_dueno"/>
              <field name="fecha_ticket" widget="date"/>
              <field name="costo"/>
              <field name="its_traveling" invisible="1"/>
              <field name="destino" attrs="{'invisible':[('its_traveling', '!=', True)]}"/>
              <field name="lugar_destino" attrs="{'invisible':[('its_traveling', '!=', True)]}"/>
              <field name="descuento"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="repaso_main_view_list" model="ir.ui.view">
      <field name="name">repaso.main.view.list</field>
      <field name="model">repaso.main</field>
      <field name="arch" type="xml" >
        <tree string="Tickets">
              <field name="tickets"/>
              <field name="nombre_dueno"/>
              <field name="fecha_ticket"/>
              <field name="costo"/>
        </tree>
      </field>
    </record>

    <record id="action_wizard_modulo_repaso" model="ir.actions.act_window">
        <field name="name">Modulo Repaso Wizard</field>
        <field name="res_model">repaso.main</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="wizard_repaso_modulo"/>
        <field name="target">new</field>
    </record>

    <menuitem
            id="menuitem_wizard_repaso"
            name="Wizard Repaso"
            action="action_wizard_modulo_repaso"
            parent="escuela_top"/>