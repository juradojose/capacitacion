<odoo>
  <data>
    
    <record id="repaso_main_view_form" model="ir.ui.view">
      <field name="name">repaso.main.view.form</field>
      <field name="model">repaso.main</field>
      <field name="arch" type="xml">
        <form string="Main Repaso">

          <sheet>
            <group>
              <field name="tickets"/>
              <field name="nombre_dueno"/>
              <field name="fecha_ticket" widget="date"/>
              <field name="costo"/>
              <field name="its_traveling" invisible="1"/>
              <field name="destino" attrs="{'invisible':[('its_traveling', '!=', True)]}"/>
              <field name="lugar_destino" attrs="{'invisible':[('its_traveling', '!=', True)]}"/>
              <field name="descuento"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <record id="repaso_main_view_list" model="ir.ui.view">
      <field name="name">repaso.main.view.list</field>
      <field name="model">repaso.main</field>
      <field name="arch" type="xml" >
        <tree string="Tickets">
              <field name="tickets"/>
              <field name="nombre_dueno"/>
              <field name="fecha_ticket"/>
              <field name="costo"/>
        </tree>
      </field>
    </record>

    <record id="repaso_main_action" model="ir.actions.act_window">
      <field name="name">Repaso Capacitaci√≥n</field>
      <field name="res_model">repaso.main</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
      <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Crear el primet Ticket.</p>
      </field>
    </record>

    <menuitem
      id="repaso_main_menu"
      name="Repaso"
      sequence="-1"/>
    <menuitem
      id="reapaso_main_1_menu"
      name="Repaso Main"
      action="repaso_main_action"
      parent="repaso_main_menu"
      />
  </data>
</odoo>